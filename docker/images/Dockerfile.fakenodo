FROM python:3.11-slim
WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
# Copia SOLO lo necesario para fakenodo:
COPY app/modules/fakenodo/app.py /app/app.py
# Carpeta para ficheros (persistente en Render)
ENV FAKENODO_FILES_DIR=/data
RUN mkdir -p /data
EXPOSE 8000
# Render inyecta $PORT; gunicorn debe atarse a 0.0.0.0:$PORT
CMD gunicorn -w 2 -b 0.0.0.0:$PORT app:app
